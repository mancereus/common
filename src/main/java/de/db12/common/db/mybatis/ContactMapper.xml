<mapper namespace="org.mybatis.guice.ContactMapper">

    <resultMap type="org.mybatis.guice.Contact" id="contactMap">
        <id column="id" property="id"/>
        <result column="first_name" property="firstName"/>
        <result column="last_name" property="lastName"/>
        <result column="created" property="created"/>
        <result column="address" property="address"/>
    </resultMap>

    <insert id="brokenAdd" parameterType="org.mybatis.guice.Contact" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO
            contact (
                first_name,
                last_name,
                created,
                address
            )
        VALUES (
            #{firstName},
            #{lastName},
            #{created, jdbcType=TIMESTAMP},
            #{address, jdbcType=VARCHAR}
        )
    </insert>

    <insert id="add" parameterType="org.mybatis.guice.Contact">
        INSERT INTO
            contact (
                first_name,
                last_name,
                created,
                address
            )
        VALUES (
            #{firstName},
            #{lastName},
            #{created, jdbcType=TIMESTAMP},
            #{address, jdbcType=VARCHAR}
        )
        <selectKey order="AFTER" resultType="int" keyProperty="id">
            CALL IDENTITY()
        </selectKey>
    </insert>

    <sql id="select">
        SELECT
            id,
            first_name,
            last_name,
            created,
            address
        FROM
            contact
    </sql>

    <sql id="where">
        WHERE
            id = #{id}
    </sql>

    <update id="update" parameterType="org.mybatis.guice.Contact">
        UPDATE
            contact
        SET
            first_name = #{firstName},
            last_name = #{lastName}
        <include refid="where"/>
    </update>

    <delete id="delete" parameterType="java.lang.Integer">
        DELETE FROM
            contact
        <include refid="where"/>
    </delete>

    <select id="getById" parameterType="java.lang.Integer" resultMap="contactMap">
        <include refid="select"/>
        <include refid="where"/>
    </select>

    <select id="selectAll" resultMap="contactMap">
        <include refid="select"/>
    </select>

</mapper>
